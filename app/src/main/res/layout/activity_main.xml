<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img" />

    <TextView
        android:id="@+id/fraseDoDia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A frase do dia Ã©:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />


    <Button
        android:id="@+id/botaoGerador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gere uma Frase"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fraseDoDia"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/todasAsFrases"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Frases acumuladas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botaoGerador"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/botaoDeFrases"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mostra Frases"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/todasAsFrases"
        android:layout_marginTop="20dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
